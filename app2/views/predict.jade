doctype html
html
  head
    title= title
    block stylesheets
      link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .dropdown
      h1= title
      .dropdown-content
        p: #[a(href='/films') Films] #[a(href='/genres') Genres]
    p Tags: #{tags}
    p Predicted Rating by Tag: #{tagRate}
    p Predicted Rating by Previews: #{previewRate}

    form(action='/predict/p', method='GET')
      label(for='new_tag')
      input(type='text', name='new_tag', id='new_tag', placeholder='add tag')
      button(type='submit') Tags
      input(type='hidden', name='tags', value="<%= tags.concat(new_tag).join(',') %>")
    
    form(action='/predict/p', method='GET')
      label(for='ratings')
      input(type='number', name='ratings', id='ratings', placeholder='add preview rating')
      button(type='submit') Search
